<config xmlns="http://www.hybris.com/cockpit/config"
		xmlns:na="http://www.hybris.com/cockpitng/config/notifications"
		xmlns:list="http://www.hybris.com/cockpitng/component/listView"
		xmlns:list-view="http://www.hybris.com/cockpitng/component/listView"
		xmlns:simple-search="http://www.hybris.com/cockpitng/config/simplesearch"
		xmlns:advanced-search="http://www.hybris.com/cockpitng/config/advancedsearch"
		xmlns:editorArea="http://www.hybris.com/cockpitng/component/editorArea"
		xmlns:yss="http://www.hybris.com/cockpitng/config/simplesearch"
		xmlns:as="http://www.hybris.com/cockpitng/config/advancedsearch"
		xmlns:n="http://www.hybris.com/cockpitng/config/explorertree"
		xmlns:y="http://www.hybris.com/cockpit/config/hybris"
		xmlns:explorer-tree="http://www.hybris.com/cockpitng/config/explorertree"
		xmlns:wz="http://www.hybris.com/cockpitng/config/wizard-config">


	<context merge-by="module" component="editorareaactions" type="Consignment">
		<y:actions xmlns:y="http://www.hybris.com/cockpit/config/hybris">
			<y:group qualifier="common">
				<y:label>actiongroup.common</y:label>				
				<y:action action-id="br.com.ey.backoffice.actions.confirmpickupaction" property="currentObject"/>				
			</y:group>
		</y:actions>
    </context>

	<context merge-by="module" component="explorer-tree">
		<explorer-tree:explorer-tree>

			<explorer-tree:navigation-node id="hmc_treenode_order">
				<explorer-tree:type-node id="hmc_type_tree_OrderPaymentLogInfo" code="OrderPaymentLogInfo"/>
			</explorer-tree:navigation-node>

		</explorer-tree:explorer-tree>
	</context>

	<!-- Notification Area-->
	<context component="notification-area">
	    <na:notification-area>	        
	        <na:notifications eventType="eybackoffice.confirmpickup.event" level="SUCCESS">
	            <na:message>hmc.action.confirmpickup.success</na:message>
	        </na:notifications>
	   </na:notification-area>
	</context>


	<context merge-by="module" component="explorer-tree">
		<n:explorer-tree>
			<n:navigation-node id="hmc_treenode_pricesettings">
				<n:type-node id="BraspagPaymentMode" code="BraspagPaymentMode"/>
			</n:navigation-node>
		</n:explorer-tree>
	</context>

	<context merge-by="type" parent="PaymentMode" type="BraspagPaymentMode" component="create-wizard">
		<wz:flow id="BraspagPaymentMode" title="create.BraspagPaymentMode.title.label">
			<wz:prepare id="BraspagPaymentModePrepare">
				<wz:initialize property="newItem" type="BraspagPaymentMode"/>
			</wz:prepare>
			<wz:step id="step1" label="create.BraspagPaymentMode.essential.label">
				<wz:content id="step1.content">
					<wz:property-list root="newItem">
						<wz:property qualifier="active"/>
						<wz:property qualifier="code"/>
						<wz:property qualifier="name"/>
						<wz:property qualifier="installment"/>
						<wz:property qualifier="paymentInfoType"/>
						<wz:property qualifier="creationtime"/>
					</wz:property-list>
				</wz:content>
				<wz:navigation id="step1.navigation">
					<wz:cancel/>
					<wz:done>
						<wz:save property="newItem"/>
					</wz:done>
				</wz:navigation>
			</wz:step>
		</wz:flow>
	</context>
	<!--Aba na area do backoffice-->
	<context merge-by="type" parent="PaymentMode" type="BraspagPaymentMode" component="editor-area">
		<editorArea:editorArea>
			<editorArea:tab name="hmc.tab.BraspagPaymentMode.customize">
				<editorArea:section name="hmc.sec.BraspagPaymentMode.customize">
					<editorArea:attribute qualifier="installment"/>
				</editorArea:section>
			</editorArea:tab>
		</editorArea:editorArea>
	</context>
	<!-- Lista de primeira visualizacao do backoffice -->
	<context merge-by="type" parent="PaymentMode" type="BraspagPaymentMode" component="listview">
		<list:list-view>
			<list:column qualifier="code"/>
			<list:column qualifier="name"/>
			<list:column qualifier="description"/>
			<list:column qualifier="installment"/>
		</list:list-view>
	</context>

	<context merge-by="type" parent="PaymentMode" type="BraspagPaymentMode" component="simple-search">
		<yss:simple-search>
			<yss:field name="code"/>
		</yss:simple-search>
	</context>

	<context merge-by="type" parent="PaymentMode" type="BraspagPaymentMode" component="advanced-search">
		<as:advanced-search>
			<as:field-list>
				<as:field name="code" selected="true" operator="contains"/>
				<as:field name="name" operator="contains"/>
				<as:field name="installment" operator="contains"/>
			</as:field-list>
		</as:advanced-search>
	</context>

	<context type="BraspagPaymentMode" component="base" merge-by="type" parent="PaymentMode">
		<y:base>
			<y:labels>
				<y:label>code + ' - ' + name</y:label>
			</y:labels>
		</y:base>
	</context>

	<context merge-by="type" parent="GenericItem" type="BaseStore" component="editor-area">
		<editorArea:editorArea>
			<editorArea:tab name="hmc.braspag">
				<editorArea:section name="hmc.braspag.account">
					<editorArea:attribute qualifier="braspagAPIEndpoint"/>
					<editorArea:attribute qualifier="braspagMerchantId"/>
					<editorArea:attribute qualifier="braspagMerchantKey"/>
					<editorArea:attribute qualifier="braspagProvider"/>
					<editorArea:attribute qualifier="supportedCreditCardBrands"/>
				</editorArea:section>
			</editorArea:tab>
		</editorArea:editorArea>
	</context>

	<context merge-by="type" parent="GenericItem" type="OrderPaymentLogInfo" component="listview">
		<list-view:list-view>
			<list-view:column  qualifier="dateTime" />
			<list-view:column  qualifier="orderCode" />
			<list-view:column  qualifier="integrationStatus" />
			<list-view:column  qualifier="message" />
			<list-view:column  qualifier="cardNumber" />
			<list-view:column  qualifier="installments" />
			<list-view:column  qualifier="cardHolder" />
			<list-view:column  qualifier="cardBrand" />
			<list-view:column  qualifier="expiryMonth" />
			<list-view:column  qualifier="expiryYear" />
			<list-view:column  qualifier="documentNumber" />
			<list-view:column  qualifier="documentType" />
			<list-view:column  qualifier="amount" />
		</list-view:list-view>
	</context>

	<context type="OrderPaymentLogInfo" component="simple-search">
		<simple-search:simple-search>
			<simple-search:field xmlns="http://www.hybris.com/cockpitng/config/simplesearch" name="orderCode"/>
			<simple-search:sort-field xmlns="http://www.hybris.com/cockpitng/config/simplesearch" asc="true" name="orderCode"/>
		</simple-search:simple-search>
	</context>

	<context type="OrderPaymentLogInfo" component="advanced-search">
		<advanced-search:advanced-search>
			<advanced-search:field-list>
				<advanced-search:field name="orderCode" selected="true"/>
				<advanced-search:field name="dateTime" selected="true"/>
			</advanced-search:field-list>
			<advanced-search:sort-field name="orderCode" asc="true" />
		</advanced-search:advanced-search>
	</context>
	

</config>
